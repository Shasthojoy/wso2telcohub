		$(function() {
			$('.max_view').click(function() {
				 gadgets.Hub.publish('org.wso2.is.dashboard', {
                            msg : 'A message from User profile',
                            id: "pin_reset .expand-widget"
                        });
			});
		});
	</script>
	
        <script src="js/jquery.min.js" type="text/javascript"></script>
